<h1>Liste des livre</h1>

<table>
    <thead>
        <tr>
            <td>Titre</td>
            <td>Date</td>
            <td>Modifier</td>
        </tr>
    </thead>
    <tbody>
        <% if (data) { %>
        <%for (var i = 0; i < data.length; i++) { %>
        <tr>
            <td><%= data[i].titre %></td>
            <td><%= moment(data[i].date).format('DD MMMM YYYY') %></td>
            <td>
                <a href="http://localhost:3000/livre/update/<%= (data[i]._id) %>">Modifier</a>
            </td>
            <td>
                <a href="http://localhost:3000/livre/delete/<%= (data[i]._id) %>">Supprimer</a>
            </td>
        </tr>
        <% }%>
        <% }%>
    </tbody>
</table>
<a href="http://localhost:3000/livre/add">Ajouter un nouveau livre</a>
